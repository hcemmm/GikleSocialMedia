<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#056162"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mesajsab_pp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/mesajsab_ilteildi"
                android:layout_marginTop="20dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/iletildi"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/mesajsab_goruldu"
                android:layout_marginTop="20dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/goruldu"
                android:visibility="gone"/>


            <TextView
                android:textColor="@color/white"
                android:id="@+id/mesajsab_mesaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merhaba"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <TextView

                android:id="@+id/mesajsab_saat"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.05 pm"
                android:layout_marginStart="5dp"
                android:padding="3dp"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>






    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_toStartOf="@+id/card"
        android:id="@+id/mesajsab_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/06/2020"
        android:layout_marginStart="5dp"
        android:textColor="@color/browser_actions_bg_grey"
        android:padding="3dp"
        android:textSize="10dp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/card" />

</RelativeLayout>